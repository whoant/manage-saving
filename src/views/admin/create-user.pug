extends ../layout/main.pug
block navbar
    include ../layout/navbarAdmin.pug
block content
    .row

        .col-xl-12.col.md-12.col-12
            .card.mt-5
                .card-body
                    h3.card-title.text-center Thêm nhân viên mới
                    .row
                        .col-12

                            form(action="/admin/user/create", method="post")
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="name") Họ và tên
                                        input#name.form-control(type="text", name="name", value= name ? name: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="username") Tài khoản
                                        input#username.form-control(type="text", name="username", value= username ? username: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="password") Mật khẩu
                                        input#password.form-control(type="text", name="password", value= password ? username: "")
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="email") Email
                                        input#email.form-control(type="text", name="email", value= email ? email: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="phone") Số điện thoại
                                        input#phone.form-control(type="text", name="phone", value= phone ? phone: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="sex") Giới tính
                                        select.form-control#sex(name="sex")
                                            option(value="0") Nam
                                            option(value="1") Nữ
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="address") Địa chỉ
                                        input#address.form-control(type="text", name="address", value= address ? address: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="birthday") Ngày sinh
                                        input#birthday.form-control(type="date", name="birthday", value= birthday ? birthday: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="officeId") Chức vụ
                                        select.form-control#officeId(name="officeId")
                                            if listOffices
                                                each office in listOffices
                                                    if office.id == officeId
                                                        option(value= office.id, selected)= office.name
                                                    else
                                                        option(value= office.id)= office.name


                                button.btn.btn-danger.float-right Tạo tài khoản mới