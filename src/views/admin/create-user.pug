extends ../layout/main.pug
block navbar
    include ../layout/navbarAdmin.pug
block content
    .row

        .col-xl-12.col.md-12.col-12
            .card.mt-5
                .card-body
                    h3.card-title.text-center Thêm nhân viên mới
                    .row
                        .col-12
                            if errors
                                each error in errors
                                    .alert.alert-danger= error
                            form(action="/admin/user/create", method="post")
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="name") Họ và tên
                                        input#name.form-control(type="text", name="name", value= name ? name: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="username") Tài khoản
                                        input#username.form-control(type="text", name="username", value= username ? username: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="password") Mật khẩu
                                        input#username.form-control(type="text", name="password", value= password ? username: "")
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="email") Email
                                        input#name.form-control(type="text", name="email", value= email ? email: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="phone") Số điện thoại
                                        input#name.form-control(type="text", name="phone", value= phone ? phone: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="sex") Giới tính
                                        select.form-control#sex(name="sex")
                                            option(value="0") Nam
                                            option(value="1") Nữ
                                .row
                                    .form-group.col-lg-4.col-12
                                        label(for="birthday") Ngày sinh
                                        input#name.form-control(type="date", name="birthday", value= birthday ? birthday: "")
                                    .form-group.col-lg-4.col-12
                                        label(for="office") Chức vụ
                                        select.form-control#office(name="office")
                                            if listOffices
                                                each office in listOffices
                                                    option(value= office.id)= office.name


                                button.btn.btn-danger.float-right Tạo tài khoản mới