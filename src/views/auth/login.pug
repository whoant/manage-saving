    body#kt_body.header-fixed.header-mobile-fixed.subheader-enabled.subheader-fixed.aside-enabled.aside-fixed.aside-minimize-hoverable.page-loading
        // begin::Main
        .d-flex.flex-column.flex-root
            // begin::Login
            #kt_login.login.login-4.login-signin-on.d-flex.flex-row-fluid
                .d-flex.flex-center.flex-row-fluid.bgi-size-cover.bgi-position-top.bgi-no-repeat(style="background-image: url('assets/media/bg/bg-3.jpg');")
                    .login-form.text-center.p-7.position-relative.overflow-hidden
                        .d-flex.flex-center.mb-15
                            a(href='#')
                                img.max-h-75px(src='assets/media/logos/logo-letter-13.png' alt='')

                        .login-signin
                            .mb-20
                                h3 Đăng nhập vào hệ thống
                            if errors
                                each error in errors
                                    .alert.alert-custom.alert-danger(role='alert')
                                        .alert-icon
                                            i.flaticon-warning
                                        .alert-text= error

                            form#kt_login_signin_form.form(action='/auth', method='post')
                                .form-group.mb-5
                                    input.form-control.h-auto.form-control-solid.py-4.px-8(type='text' placeholder='Tài khoản' name='username' autocomplete='off')
                                .form-group.mb-5
                                    input.form-control.h-auto.form-control-solid.py-4.px-8(type='password' placeholder='Mật khẩu' name='password')
                                button#kt_login_signin_submit.btn.btn-primary.font-weight-bold.px-9.py-4.my-3.mx-4 Đăng nhập

