        link(href='/assets/css/themes/layout/header/menu/light.css' rel='stylesheet' type='text/css')
        link(href='/assets/css/themes/layout/brand/dark.css' rel='stylesheet' type='text/css')
        link(href='/assets/css/themes/layout/aside/dark.css' rel='stylesheet' type='text/css')
        // end::Layout Themes
    // end::Head
    // begin::Body
    body#kt_body.header-fixed.header-mobile-fixed.subheader-enabled.subheader-fixed.aside-enabled.aside-fixed.aside-minimize-hoverable.page-loading
        // begin::Main
        .d-flex.flex-column.flex-root
            // begin::Login
            #kt_login.login.login-1.login-signin-on.d-flex.flex-column.flex-lg-row.flex-column-fluid.bg-white
                // begin::Aside
                .login-aside.d-flex.flex-column.flex-row-auto(style='background-color: #F2C98A;')
                    // begin::Aside Top
                    .d-flex.flex-column-auto.flex-column.pt-lg-40.pt-15
                        // begin::Aside header
                        a.text-center.mb-10(href='#')
                            img.max-h-70px(src='assets/media/logos/logo-letter-1.png' alt='')
                        // end::Aside header
                        // begin::Aside title
                        h3.font-weight-bolder.text-center.font-size-h4.font-size-h1-lg(style='color: #986923;')
                            | Hệ thống quản lý số tiêt kiệm

                        // end::Aside title
                        // end::Aside Top
                        // begin::Aside Bottom
                        .aside-img.d-flex.flex-row-fluid.bgi-no-repeat.bgi-position-y-bottom.bgi-position-x-center(style='background-image: url(assets/media/svg/illustrations/login-visual-1.svg)')
                        // end::Aside Bottom
                        // begin::Aside
                        // begin::Content
                        .login-content.flex-row-fluid.d-flex.flex-column.justify-content-center.position-relative.overflow-hidden.p-7.mx-auto
                            // begin::Content body
                            .d-flex.flex-column-fluid.flex-center
                                // begin::Signin
                                .login-form.login-signin
                                    // begin::Form
                                    form#kt_login_signin_form.form(action="/customer/auth", method="post")
                                        // begin::Title
                                        .pb-13.pt-lg-0.pt-5
                                            h3.font-weight-bolder.text-dark.font-size-h4.font-size-h1-lg Chào mừng bạn đến với hệ thống quản lý sổ tiết kiệm

                                        // begin::Title
                                        // begin::Form group
                                        .form-group
                                            label.font-size-h6.font-weight-bolder.text-dark Tài khoản
                                            input.form-control.form-control-solid.h-auto.py-6.px-6.rounded-lg(type='text' name='username' autocomplete='off')
                                        // end::Form group
                                        // begin::Form group
                                        .form-group
                                            .d-flex.justify-content-between.mt-n5
                                                label.font-size-h6.font-weight-bolder.text-dark.pt-5 Mật khẩu

                                            input.form-control.form-control-solid.h-auto.py-6.px-6.rounded-lg(type='password' name='password' autocomplete='off')
                                        // end::Form group
                                        // begin::Action
                                        .pb-lg-0.pb-5
                                            button#kt_login_signin_submit.btn.btn-primary.font-weight-bolder.font-size-h6.px-8.py-4.my-3.mr-3(type='submit') Đăng nhập


