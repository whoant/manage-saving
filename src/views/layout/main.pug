                #kt_wrapper.d-flex.flex-column.flex-row-fluid.wrapper
                    // begin::Header
                    #kt_header.header.header-fixed
                        // begin::Container
                        .container-fluid.d-flex.align-items-stretch.justify-content-between
                            // begin::Header Menu Wrapper
                            #kt_header_menu_wrapper.header-menu-wrapper.header-menu-wrapper-left
                                // begin::Header Menu
                                #kt_header_menu.header-menu.header-menu-mobile.header-menu-layout-default
