                                    ul.menu-nav
                                        li.menu-item.menu-item-submenu.menu-item-rel.menu-item-active(data-menu-toggle='click' aria-haspopup='true')
                                            a.menu-link.menu-toggle(href='javascript:;')
                                                span.menu-text Dashboard
                                                i.menu-arrow
                            .topbar
                                .topbar-item
                                    #kt_quick_user_toggle.btn.btn-icon.btn-icon-mobile.w-auto.btn-clean.d-flex.align-items-center.btn-lg.px-2
                                        span.text-muted.font-weight-bold.font-size-base.d-none.d-md-inline.mr-1 Chào,
                                        span.text-dark-50.font-weight-bolder.font-size-base.d-none.d-md-inline.mr-3 #{user.name}
                                        span.symbol.symbol-lg-35.symbol-25.symbol-light-success
                                            span.symbol-label.font-size-h5.font-weight-bold #{user.name[0]}
                    #kt_content.content.d-flex.flex-column.flex-column-fluid
                        .d-flex.flex-column-fluid
                            .container
                                if messages
                                    each msg in messages
                                        .alert.alert-custom.alert-success(role='alert')
                                            .alert-icon
                                                i.flaticon-warning
                                            .alert-text= msg
                                if msg
                                    .alert.alert-custom.alert-success(role='alert')
                                        .alert-icon
                                            i.flaticon-warning
                                        .alert-text= msg
                                if errors
                                    each error in errors
                                        .alert.alert-custom.alert-danger(role='alert')
                                            .alert-icon
                                                i.flaticon-warning
                                            .alert-text= error

                                block content
        // end::Main
        // begin::User Panel
        #kt_quick_user.offcanvas.offcanvas-right.p-10
            // begin::Header
            .offcanvas-header.d-flex.align-items-center.justify-content-between.pb-5
                h3.font-weight-bold.m-0 Thông tin
                a#kt_quick_user_close.btn.btn-xs.btn-icon.btn-light.btn-hover-primary(href='#')
                    i.ki.ki-close.icon-xs.text-muted
            // end::Header
            // begin::Content
            .offcanvas-content.pr-5.mr-n5
                // begin::Header
                .d-flex.align-items-center.mt-5
                    .symbol.symbol-100.mr-5
                        .symbol-label(style="background-image:url('assets/media/users/300_21.jpg')")
                        i.symbol-badge.bg-success
                    .d-flex.flex-column
                        a.font-weight-bold.font-size-h5.text-dark-75.text-hover-primary() #{user.name}
                        .text-muted.mt-1 #{user.Office.name}
                        .navi.mt-2
